<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Subscription_Start_Date_after_the_28th</fullName>
    <active>true</active>
    <errorConditionFormula>DAY( Subscription_Start_Date__c )&gt;28</errorConditionFormula>
    <errorDisplayField>Subscription_Start_Date__c</errorDisplayField>
    <errorMessage>Start date cannot occur after the 28th of any given month.</errorMessage>
</ValidationRule>
